<h2>Order <%= @order.id %></h2>
<p>Created On: <%= @order.created_at %></p>
<p>Updated On: <%= @order.updated_at %></p>
<p>Status: <%= @order.status %></p>
<p><%= @order.total_items_quantity %> items</p>
<p>Total: <%= number_to_currency(@order.grandtotal) %></p>

<h2>Order Items</h2>
<% @order.item_orders.each do |item_order| %>
<section id="item-order-<%= item_order.id %>">
  <p><%= item_order.item.name %></p>
  <p><%= item_order.item.description %></p>
  <p><img width=150px alt= 'image-<%=item_order.item.id%>' src= <%= item_order.item.image %>></img>
  <p>Price: <%= number_to_currency(item_order.item.price) %></p>
  <p>Quantity: <%= item_order.quantity %></p>
  <p>Subtotal: <%= number_to_currency(item_order.subtotal) %></p>
</section>
<% end %>