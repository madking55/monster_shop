<h1>Add New Item for <%= @merchant.name %></h1>

<center>
  <%= form_tag "/merchant/items", method: :post do %>

    <%= label_tag :name %>
    <%= text_field_tag :name, (@item.name unless @item.nil?) %>

    <%= label_tag :description %>
    <%= text_field_tag :description, (@item.description unless @item.nil?) %>

    <%= label_tag :price %>
    <%= text_field_tag :price, (@item.price unless @item.nil?) %>

    <%= label_tag :image %>
    <%= text_field_tag :image, (unless @item.nil? then @item.image else "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSdrF1u_GSYOgpnRJ-2EC87fkfF8sVBC2LZ4A&usqp=CAU" end )%>

    <%= label_tag :inventory %>
    <%= text_field_tag :inventory, (@item.inventory unless @item.nil?) %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</center>